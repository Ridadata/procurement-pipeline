# Database Configuration
# Copy this file to .env and update with your actual values
# For local development without Docker:
# DB_HOST=localhost
# For Docker environment:
DB_HOST=procurement_postgres
DB_PORT=5432
DB_NAME=procurement_db
DB_USER=procurement
DB_PASSWORD=your_password_here

# HDFS Configuration
# Use local for testing, HDFS for production
HDFS_MODE=local  # Options: local, hdfs
HDFS_BASE_PATH=./data  # For local mode
HDFS_NAMENODE=namenode:9000  # For HDFS mode
HDFS_ROOT_PATH=/procurement  # Base path in HDFS

# Trino Configuration
TRINO_HOST=trino
TRINO_PORT=8080

# Pipeline Configuration
BATCH_EXECUTION_TIME=22:00
DATE_FORMAT=%Y-%m-%d

# Data Generation Settings
NUM_PRODUCTS=100
NUM_WAREHOUSES=3
NUM_POS_STORES=5
NUM_SUPPLIERS=10
